

<div id="id02" class="modal">

    <form class="modal-content animate"  method="post" action="/leaves" >

        <!-- <div class="imgcontainer">
            </div> -->
        <div class="main-modal">
            <div class="row-1">
                <div class="col-1">
                    <div class="modal-container">
                        <span>Add Leave</span>
                    </div>
                </div>
                <div class="col-1">
                    <span onclick="document.getElementById('id02').style.display='none'" class="close"
                        title="Close Modal">&times;</span>
                </div>
            </div>

            <div class="container-2">
                <div class="row">
                    <div class="col-6">
                        <label><b>Leave Date</b></label>
                        <input type="date" placeholder="Leave Date" name="ldate" value="<%= result_edit[0].leave_date%>" >
                        <span class="span1" id="leave-error"></span>
                    </div>
                    <div class="col-6">
                        <label><b>Leave Type</b></label>
                        <select class="s1" name="leavetype">
                            <option value="hide" >Select Leave Type</option>
                            <option value="SL">SL</option>
                            <option value="CL">CL</option>
                            <option value="PL">PL</option>
                            <option value="UPL">UPL</option>

                        </select>
                        <span class="span1" id="ltype-error"></span>
                    </div>
                    <!-- <div class="col-7">
                        
                        <label><b>Half Day</b></label>
                        <div class="toggle">
                            <label class="switch">  
                            <input type="checkbox" name="halfday">
                            <span class="slider round"></span>
                        </label>
                        </div>
                    </div> -->

                </div>
                <div class="row">
                    <div class="col-8">
                        <label for="reason">Reason</label>
                        <textarea rows="4" name="reason"></textarea>
                        <span class="span1" id="reason-error"></span>
                    </div>
                </div>
            </div>

            <div class="container-2">
                <div class="row">

                    <div class="col-8">
                        <div class="c1">
                            <span class="cancel" onclick="document.getElementById('id02').style.display='none'">Cancel</span>
                            <input type="submit" class="apply" onclick="return leaveFunction()" value="Apply">
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

<script>


function leave_edit(leave,b){

// document.getElementById('id02').style.display='block'
console.log(leave);
console.log(b);

}
var modal = document.getElementById('id01');
window.onclick = function (event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}

function leaveFunction(){

var ldate = document.getElementById('ldate').value || "";
var reason = document.getElementById('reason').value || "";
var ltype = document.getElementById('leavetype').value || "";
var isvalidate = true;

// validation
if(ldate == null || ldate == "")
{
  document.getElementById('leave-error').innerHTML="Please fill date ";
  isvalidate = false;
}
else{
  document.getElementById('leave-error').innerHTML="";
}

if(ltype == null || ltype == "")
{
  document.getElementById('ltype-error').innerHTML="Please select type ";
  isvalidate = false;
}
else{
  document.getElementById('ltype-error').innerHTML="";
}

if(reason == null || reason == "")
{
  document.getElementById('reason-error').innerHTML="Please enter reason";
  isvalidate = false;
}
else{
  document.getElementById('reason-error').innerHTML="";
}
}

</script>