        var validRegex =
          /^[a-zA-Z0-9.!#$%&'+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)$/;

        var email = document.getElementById("email");
        var namevalid = "/[^0-9]/g";
        var name = document.getElementById("name");

        console.log(password.value);
        console.log(conform_password.value);
        if (password.value.length < 3) {
          // console.log((password.value).length)
          hidden_text.innerHTML = "password must be 3 character!...";
          return false;
        }
        if (password.value != conform_password.value) {
          hidden_text.innerHTML = "Password doesnot match!...";
          return false;
        }
        if (!email.value.match(validRegex)) {
          console.log("sanjay");
          hidden_text_email.innerHTML = "Enter Correct email_id .....";
          return false;
        }
        if (name.value == "" || name.value == null) {
          console.log("sanjay");
          hidden_text_name.innerHTML = "Please enter your name......";
          return false;
        }
        if (!isNaN(name.value)) {
          console.log("sanjay");
          hidden_text_name.innerHTML = "Enter Correct name .....";
          return false;
        } else {
          return true;
        }
      }
      function clone_email(email) {
        fetch("/clone-email", {
          method: "POST",
          headers: {
            "Content-type": "application/json",
          },
          body: JSON.stringify({
            email: email,
          }),
        })
          .then((res) => {
            return res.json();
          })
          .then((res) => {
            console.log(res);
            if (res == false) {
              document.getElementById("showerror").innerHTML =
                "User is already exist";
              document.getElementById("submit").disabled = true;
            } else {
              console.log("inside the elsse");
              document.getElementById("showerror").innerHTML = "";
              document.getElementById("submit").disabled = false;
            }
          });
      }
    </script>
  </body>
</html>
