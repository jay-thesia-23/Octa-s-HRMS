<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/wizard.css" />
  <script src="/js/script.js" defer></script>
  <script src="./multer.js"></script>
  <title>Registeration Form</title>
</head>

<body>
  <form action="/wizard" method="post" class="form" enctype="multipart/form-data">
    <div class="container">
      <h1 class="text-center">Registeration Form</h1>
      <!-- Progress bar -->
      <div class="progressbar">
        <div class="progress" id="progress"></div>

        <div class="progress-step progress-step-active" data-title="Basic info"></div>
        <div class="progress-step" data-title="Education Detail"></div>
        <div class="progress-step" data-title="Skills"></div>
        <div class="progress-step" data-title="References"></div>
        <div class="progress-step" data-title="Documents upload"></div>
      </div>

      <!-- Steps -->
      <div class="form-step form-step-active">

        <div class="row">
          <div class="col">
            <div class="input-group-3">
              <label for="username">First Name</label>
              <input type="text" name="fname" id="fname"  onchange="fnameValidate()"/>
              <span class="span1" id="fname-error"></span>
            </div>
          </div>
          <div class="col">
            <div class="input-group-3">
              <label for="position">Last Name</label>
              <input type="text" name="lname" id="lname" onchange="lnameValidate()" />
              <span class="span1" id="lname-error"></span>
            </div>
          </div>
        </div>

        <div class="input-group">
          <label for="dob">Date of Birth</label>
          <input type="date" name="dob" id="dob" />
          <span class="span1" id="dob-error"></span>
        </div>
        <div class="input-group">
          <label for="address">Address</label>
          <input type="text" name="address" id="address" onchange="addressValidate()"/>
          <span class="span1" id="address-error"></span>
        </div>
        <label for="gender">Gender</label>
        <div class="input-group-2">
          <div class="div-2">
            <div> <input type="radio" name="gender" id="male" value="male" />Male</div>
            <div><input type="radio" name="gender" id="female" value="female" />Female</div>
           
          </div>
        </div>
        <span class="span1" id="gender-error"></span>
        <div class="input-group">
          <label for="position">Contact</label>
          <input type="text" name="contact" id="contact" onchange="contactValidate()"/>
          <span class="span1" id="contact-error"></span>
        </div>
        <div class="input-group">
          <label for="position">Relationship Status</label>
          <div class="select-dropdown">
            <select name="relationship" id="relationship">
              <option value="Single">Single</option>
              <option value="Married">Married</option>
              <option value="Divorce">Divorce</option>
            </select>
            <span class="span1" id="relationship-error"></span>
          </div>
          
        </div>
        <div class="row">
          <div class="col">
            <div class="input-group-3">
              <label for="position"> State</label>
              <div class="select-dropdown">
                <select name="state" id="state" >
                  <option value="select state" disabled>select state</option>
                  <option value="Gujarat">Gujarat</option>
                  <option value="Rajasthan">Rajasthan</option>
                  <option value="Maharasthra">Maharasthra</option>
                </select>
              </div>
              <span class="span1" id="state-error"></span>
            </div>
          </div>
          <div class="col">
            <div class="input-group-3">
              <label for="position"> City</label>
              <div class="select-dropdown">
                <select name="city" id="city">
                  <option value="" disabled="disabled">select city</option>
                  <option value="Ahmedabad">Ahmedabad</option>
                  <option value="surat">surat</option>
                  <option value="Bhavnagar">Bhavnagar</option>
                </select>
              </div>
              <span class="span1" id="city-error"></span>
            </div>
          </div>
        </div>
        <div class="">
          <a href="#" class="btn btn-next width-50 ml-auto" onclick="return registerPage1()">Next</a>
        </div>
      </div>
    
    </div>
    <div class="form-step" id="education" name="edu">
      <div class="input-group">
        <div class="select-dropdown">
        <label for="Course">Course</label>
          <select name="course">
            <option value="SSC">SSC</option>
            <option value="HSC">HSC</option>
            <option value="Bachelor">Bachelor</option>
            <option value="Master">Master</option>
          </select>
        <span class="span1" id="city-error"></span>
        </div>
      </div>
      <div class="input-group">
        <label for="University">University/college</label>
        <input type="text" name="uni" id="uni" onchange="uniValidate()"/>
        <span class="span1" id="uni-error"></span>
      </div>
      <div class="input-group">
        <label for="passyear">Passing Year</label>
        <input type="text" name="passyear" id="passyear"  onchange="yearValidate()"/>
        <span class="span1" id="year-error"></span>
      </div>
      <div class="input-group">
        <label for="percentage">Percentage</label>
        <input type="text" name="percent" id="percent" onchange="percentValidate()" />
        <span class="span1" id="percent-error"></span>
      </div>
      <div class="btn-grup-2">
        <a href="#" class="btn-2" onclick="education()">Add Field</a>
      </div>
      <p id="p1"></p>
      <div class="btns-group">
        <a href="#" class="btn btn-prev">Previous</a>
        <a href="#" class="btn btn2-next" onclick="return registerPage2()">Next</a>
      </div>
      
    </div>
    <div class="form-step">
      <div class="input-group">
        <label for="dob">Date of Birth</label>
        <input type="date" name="dob" id="dob" />
      </div>
      <div class="input-group">
        <label for="ID">National ID</label>
        <input type="number" name="ID" id="ID" />
      </div>

      <div class="btns-group">
        <a href="#" class="btn btn-prev">Previous</a>
        <a href="#" class="btn btn-next">Next</a>
      </div>
    </div>
   
      
    <div class="form-step">
      <div class="input-group">
        <label for="Name">Name</label>
        <input type="text" name="name1" id="name1" />
       
      </div>
      <div class="row">
          <div class="col">
          <div class="input-group-3">
            <label for="contact">contact</label>
            <input type="text" name="cont1" id="cont1" />
          </div>
        </div>
        <div class="col">
          <div class="input-group-3">
            <label for="Relation">Relation</label>
            <input type="text" name="relation1" id="relation1" />
          </div>
          </div>
        </div>

        <!--  -->
        <div class="input-group">
          <label for="Name">Name</label>
          <input type="text" name="name1" id="name1" />
        </div>
        <div class="row">
            <div class="col">
            <div class="input-group-3">
              <label for="password">contact</label>
              <input type="password" name="cont2" id="cont2" />
            </div>
          </div>
          <div class="col">
            <div class="input-group-3">
              <label for="Relation">Relation</label>
              <input type="password" name="relation2" id="relation2" />
            </div>
            </div>
          </div>
      <div class="btns-group">
        <a href="#" class="btn btn-prev">Previous</a>
        <a href="#" class="btn btn-next">Next</a>
      </div>
    
  </div>
  <div class="form-step">
    <div class="input-group">
    <label for="adhar">Adhaar Card / Pan Card</label>
    <input type="file" name="adhar" id="file"  />
    </div>
    
    <div class="input-group">
    <label for="resume">Resume</label>
    <input type="file" name="resume" id="file" />
    </div>

    <div class="input-group">
    <label for="cheque">Cheques</label>
    <input type="file" name="cheque" id="file" />
    </div>

    <div class="input-group">
    <label for="others">Others</label>
    <input type="file" name="others" id="file" />
    </div>


    <div class="input-group">
      <label for="profilePic">profilePic</label>
      <input type="file" name="profilePic" id="file" />
      </div>


    <div class="btns-group">
    <a href="#" class="btn btn-prev">Previous</a>
    <input type="submit" value="Submit" class="btn" />
    </div>
    </div>
    </div>
  </form>
</body>

</html>